<h2><img src="/images/icons/user_32.png" alt="Sign in" />Sign in</h2>

<div id="login">
	<div class="content-box">
		<div class="content-box-header">
			<h3>Sign in</h3>
			
			<%= render :partial => "devise/shared/links" %><br />
		</div>
		
		<div class="content-box-content">
			<%= form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
				<p><%= f.label :email %>
				<%= f.text_field :email %></p>

				<p><%= f.label :password %>
				<%= f.password_field :password %></p>

				<% if devise_mapping.rememberable? -%>
					<br /><p><%= f.check_box :remember_me %> Remember me</p>
				<% end -%>

				<%= f.submit "Sign in" %>
				
			<% end %>

			
		</div>
	</div>
</div>